@using Datis
@model Datis.Models.VideoVM
@{
    ViewBag.Title = "گالری ویدئو داتیس";
    Layout = "~/Views/Shared/_VideoLayout.cshtml";
}
@section meta{
    <meta property="og:site_name" content="داتیس" />
<meta property="og:type" content="video" />
<meta property="og:video:type" content="application/x-shockwave-flash" />

<meta property="og:title" content="@Model.TitleOrUrl" />
<meta property="og:description" content="@Model.TitleOrUrl" />
<meta property="og:image" content="http://www.datisint.ir/@Model.Image" />
<meta property="og:image:secure_url" content="http://www.datisint.ir/@Model.Image">
<meta property="og:image:width" content="640">
<meta property="og:image:height" content="360">

<meta property="og:video:url" content="http://www.datisint.ir/@Model.Video">
<meta property="og:video:secure_url" content="http://www.datisint.ir/@Model.Video">
<meta property="og:video:type" content="video/mp4">
<meta property="og:video:width" content="640">
<meta property="og:video:height" content="360">
}
@section styles{
    <link rel='stylesheet' href='~/Content/unitegallery/css/unite-gallery.css' type='text/css' />
    <link rel='stylesheet' href='~/Content/unitegallery/themes/default/ug-theme-default.css' type='text/css' />
    
    <style type="text/css">
        .ug-textpanel-title {
            font-family: "BaharFont";
        }
        .video {
            width: 100%;
            border: 1px solid black;
        }

        .wrapper {
            display: table;
            width: auto;
            position: relative;
            width: 100%;
        }

        .playpause {
            background-image: url(../Content/images/play.png);
            width: 50%;
            height: 50%;
            position: absolute;
            left: 0%;
            right: 0%;
            top: 0%;
            bottom: 0%;
            margin: auto;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
}
<div class="container" style=" margin-top: 10px;">
    <div class="row" style="margin-bottom: 100px; margin-top: 20px;">
        <div class="office_address col-sm-6 col-md-4">
            <div class="team_member">
                <img src="~/Content/Theme/images/logo.png" alt="logo">
                <h5>شرکت پویش رایان داتیس</h5>
                <small>نمایندگی مانیتورهای صنعتی و تجاری LG و دوربین های مداربسته Briton</small><br>
                <address>
                    ایران تهران<br>
خیابان دماوند - منطقه صنعتی اتحاد - خیابان اتحاد - خیابان اول شرقی - پلاک 1
                    <br>
                </address>
                <abbr title="Phone">تلفن:</abbr> 74856-021<br>
                <!-- <abbr title="Phone">تلفن:</abbr> 22768667<br> -->
                <abbr title="Phone">ایمیل:</abbr> <a href="mailto:#">info@datisint.com</a>
            </div>
        </div>
        <div class="contact_form col-sm-6 col-md-8">
            <div class="wrapper">
                <video class="video">
                    <source src="~/@Model.Video" />
                </video>
                <div class="playpause"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type='text/javascript' src="~/Content/unitegallery/js/unitegallery.min.js"></script>
    <script type='text/javascript' src='~/Content/unitegallery/themes/tilesgrid/ug-theme-tilesgrid.js'></script>
    <script type="text/javascript">
        $('.video').parent().click(function () {
            if ($(this).children(".video").get(0).paused) {
                $(this).children(".video").get(0).play();
                $(this).children(".playpause").fadeOut();
            } else {
                $(this).children(".video").get(0).pause();
                $(this).children(".playpause").fadeIn();
            }
        });
    </script>
}



