<div class="container" style=" margin-top: 10px;">
    <div class="row">
        <!--Middle Part Start-->
        <div id="content" class="col-sm-9">
            <!-- Slideshow Start-->
            <div class="slideshow single-slider owl-carousel">
                <div class="item"> <a href="#"><img class="img-responsive" src="~/Content/shop/image/slider/banner-1.jpg" alt="banner 1" /></a> </div>
                <div class="item"> <a href="#"><img class="img-responsive" src="~/Content/shop/image/slider/banner-2.jpg" alt="banner 2" /></a> </div>
                <div class="item"> <a href="#"><img class="img-responsive" src="~/Content/shop/image/slider/banner-3.jpg" alt="banner 3" /></a> </div>
            </div>
            <div class="row products-category">
                @foreach (var item in Model)
                {

                    <div class="product-layout product-list col-xs-12">
                        <div class="product-thumb">
                            <div class="image"><a href="@Url.Action("Index", "Brand", new { Id = item.Id, BrandTitle = item.Name.Replace(" ","-") })"><img src='~/@item.Logo' alt='@item.Description' title="@item.Description" class="img-responsive" /></a></div>
                            <div>
                                <div class="caption">
                                    <h4><a href="@Url.Action("Index", "Brand", new { Id = item.Id, BrandTitle = item.Name.Replace(" ", "-") })">@item.Name</a></h4>
                                    <p class="description">
                                        @item.Description
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>


        </div>
        <!--Middle Part End-->
        @{Html.RenderAction("SideBar", "Partial", new { area = "" });}

    </div>
</div>

